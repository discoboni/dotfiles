spacing = 4

[module/network]
type = internal/network
interface = wlp0s26u1u2
label-connected = %essid% %signal%% 
format-connected =  <label-connected>
format-disconnected = <label-disconnected>

[module/spotify]
interval = 2.0
type = custom/script
exec = ~/.config/polybar/spotifyControl.py
format-prefix = " "
click-right = ~/.config/polybar/spotifyControl.py -n
click-left = ~/.config/polybar/spotifyControl.py -p
click-middle = ~/.config/polybar/spotifyControl.py -pp 
